{
  "manifest_version": 3,
  "name": "GitHub CodeSearch Extensions",
  "version": "0.1.0",
  "description": "Chrome extension lets you make select text on any webpage and search for it in GitHub CodeSearch",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GitHub CodeSearch Extensions"
  },
  "permissions": [
    "storage", 
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}